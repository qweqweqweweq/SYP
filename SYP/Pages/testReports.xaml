<Page x:Class="SYP.Pages.testReports"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="testReports">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 1. ФИЛЬТРЫ -->
        <GroupBox Header="Фильтры отчётов" Margin="0,0,0,10">
            <StackPanel Orientation="Vertical" Margin="10">
                <WrapPanel Margin="0,5">
                    <Label Content="Период:" VerticalAlignment="Center" />
                    <DatePicker x:Name="StartDate" Width="120" Margin="5,0"/>
                    <Label Content="—" VerticalAlignment="Center"/>
                    <DatePicker x:Name="EndDate" Width="120" Margin="5,0"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <Label Content="Отдел:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="DepartmentComboBox" Width="150" Margin="5,0"/>
                    <Label Content="Должность:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="PositionComboBox" Width="150" Margin="5,0"/>
                </WrapPanel>
                <WrapPanel Margin="0,5">
                    <Label Content="Статус:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="StatusComboBox" Width="150" Margin="5,0">
                        <ComboBoxItem>Активен</ComboBoxItem>
                        <ComboBoxItem>Уволен</ComboBoxItem>
                        <ComboBoxItem>В отпуске</ComboBoxItem>
                    </ComboBox>
                    <Label Content="Тип отчёта:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                    <ComboBox x:Name="ReportTypeComboBox" Width="200" Margin="5,0"/>
                </WrapPanel>
            </StackPanel>
        </GroupBox>

        <!-- 2. СПИСОК ОТЧЕТОВ -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl x:Name="ReportItems" Margin="0,0,0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#FFDCE4F1" BorderThickness="1" CornerRadius="10" Margin="5" Padding="10">
                            <StackPanel>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="{Binding Description}" Margin="0,5"/>
                                <Button Content="Сформировать" Background="AliceBlue" Width="150" HorizontalAlignment="Left" Margin="0,10,0,0" Style="{StaticResource RoundedButton}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 3. ЭКСПОРТ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Экспорт в PDF" Margin="5" Width="150" Style="{StaticResource RoundedButton}"/>
            <Button Content="Экспорт в Excel" Margin="5" Width="150" Style="{StaticResource RoundedButton}"/>
            <Button Content="Печать" Margin="5" Width="100" Style="{StaticResource RoundedButton}"/>
        </StackPanel>
    </Grid>
</Page>
