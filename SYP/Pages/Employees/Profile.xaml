<Page x:Class="SYP.Pages.Employees.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.Employees"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Border Background="White" Margin="50,50,50,50" CornerRadius="10" Effect="{DynamicResource ShadowEffect}">
            <StackPanel Margin="20,20,20,20">
                <fa:ImageAwesome Icon="Times" Width="20" Height="20" Foreground="#FF728EBB" VerticalAlignment="Top" HorizontalAlignment="Right" MouseDown="Close"/>
                <Label x:Name="lbTitle" Content="Профиль пользователя Иван" Height="40" FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Fonts/#Montserrat SemiBold" Margin="0,0,0,0"/>
                <Label x:Name="fio" Content="ФИО:" Height="30" FontSize="15" VerticalAlignment="Top" Margin="0,10,0,0"/>
                <Label x:Name="dateBirth" Content="Дата рождения:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="department" Content="Отдел:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="position" Content="Должность:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="dateHire" Content="Дата поступления:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="email" Content="Эл. почта:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="phone" Content="Номер телефона:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="status" Content="Статус:" Height="30" FontSize="15" VerticalAlignment="Top"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
