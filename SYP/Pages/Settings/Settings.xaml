<Page x:Class="SYP.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Settings" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Margin="10" CornerRadius="10" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label Height="40" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" FontFamily="/Fonts/#Montserrat Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="UserCircleOutline" Width="20" Height="20" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="СотрудниК" Foreground="#FF1F2F47"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenMain" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,90,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Home" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Главная"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenEmployees" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,125,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Users" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Сотрудники"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenDepartments" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,160,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Building" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отделы"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenPositions" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,195,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Briefcase" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Должности"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenVacations" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,230,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Calendar" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отпуска"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenReports" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,265,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="FileText" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отчёты"/>
                    </StackPanel>
                </Label>

                <Label Style="{StaticResource LabelWithIconStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,45">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Cog" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Настройки"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="Logout" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,10" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="SignOut" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Выход"/>
                    </StackPanel>
                </Label>
            </Grid>
        </Border>
        <Border Margin="10" CornerRadius="10" Grid.Column="1">
            <Border BorderBrush="White" BorderThickness="2" CornerRadius="10">
                <Grid>
                    <Label Content="Изменение данных" Height="30" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" FontFamily="/Fonts/#Montserrat SemiBold" Foreground="#FF1F2F47"/>
                    <GroupBox Header="Личные данные" Margin="20,60,20,20" FontSize="16" VerticalAlignment="Top" Foreground="#FF1F2F47" BorderBrush="#FF728EBB">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="Имя пользователя:" Height="30" FontSize="14" Margin="0,5"/>
                            <TextBox x:Name="UserNameTextBox" Height="30" FontSize="14" Grid.Column="1" Margin="0,5" Style="{StaticResource RoundedTextBoxEdit}"/>

                            <Label Content="Email:" Height="30" FontSize="14" Grid.Row="1" Margin="0,8"/>
                            <TextBox x:Name="EmailTextBox" Height="30" FontSize="14" Grid.Row="1" Grid.Column="1" Margin="0,5" Style="{StaticResource RoundedTextBoxEdit}"/>

                            <Button Content="Сохранить изменения" Width="180" Height="30" FontSize="14" Margin="0,15,0,0" Style="{StaticResource EditButtonStyle}" Click="SavePersonalInfo_Click" Grid.Column="1" Grid.Row="2"/>
                        </Grid>
                    </GroupBox>
                    <GroupBox Header="Смена пароля" Margin="20,260,20,0" FontSize="16" VerticalAlignment="Top" Foreground="#FF1F2F47" BorderBrush="#FF728EBB">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="230"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Label Content="Старый пароль:" Height="30" FontSize="14" Margin="0,5"/>
                            <PasswordBox x:Name="OldPasswordBox" Height="30" FontSize="14" Grid.Column="1" Style="{StaticResource RoundedPasswordBoxEdited}"/>
                            <Label Content="Новый пароль:" Height="30" FontSize="14" Grid.Row="1" Margin="0,8"/>
                            <PasswordBox x:Name="NewPasswordBox" Height="30" FontSize="14" Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedPasswordBoxEdited}"/>
                            <Label Content="Подтвердите новый пароль:" Height="30" FontSize="14" Grid.Row="2" Margin="0,5"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" FontSize="14" Grid.Row="2" Grid.Column="1" Style="{StaticResource RoundedPasswordBoxEdited}"/>
                            <Button Content="Изменить пароль" Width="140" Height="30" FontSize="14" Margin="0,20,0,0" Style="{StaticResource EditButtonStyle}" Click="ChangePassword_Click" Grid.Column="1" Grid.Row="3"/>
                        </Grid>
                    </GroupBox>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
