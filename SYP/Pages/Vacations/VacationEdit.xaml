<Page x:Class="SYP.Pages.Vacations.VacationEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.Vacations"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="900"
      Title="VacationEdit" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Border Background="#FF1F2F47" CornerRadius="0,0,10,10" Height="60" VerticalAlignment="Top" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label x:Name="lbTitle" Content="Создание нового отпуска" FontSize="22" FontFamily="/Fonts/#Montserrat Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <Border Background="White" CornerRadius="10" Margin="20,120,20,100" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Сотрудник:" FontSize="15" Grid.Row="0" Grid.Column="0" Foreground="#202a45"/>

                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ComboBox x:Name="Employee" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}" Margin="0,0,0,6" SelectionChanged="Employee_SelectionChanged" Grid.Row="0"/>

                    <TextBlock Padding="5,0,5,0" Visibility="Collapsed" x:Name="txtVacationDaysLeft" Margin="0,2,0,0" FontWeight="SemiBold" Foreground="#202a45" Grid.Row="1"/>
                </Grid>

                <Label Content="Дата начала отпуска:" FontSize="15" Grid.Row="2" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <DatePicker x:Name="dateStart" IsEnabled="False" Grid.Row="2" Grid.Column="1" Height="30" FontSize="15" VerticalContentAlignment="Center" Style="{DynamicResource DatePickerStyle1}" SelectedDateChanged="Date_SelectedDateChanged"/>

                <Label Content="Дата окончания отпуска:" FontSize="15" Grid.Row="3" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <Grid Grid.Row="3" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DatePicker x:Name="dateEnd" IsEnabled="False" Height="30" FontSize="15" VerticalContentAlignment="Center" Margin="0,6" Style="{DynamicResource DatePickerStyle1}" SelectedDateChanged="Date_SelectedDateChanged" Grid.Row="0"/>

                    <TextBlock Padding="5,0,5,0" Visibility="Collapsed" x:Name="txtVacationDaysCount" Margin="0,2,0,0" FontWeight="SemiBold" Foreground="#202a45" Grid.Row="1"/>
                </Grid>

                <Label Content="Тип:" Grid.Row="1" FontSize="15" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <ComboBox x:Name="Type" Grid.Row="1" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}" SelectionChanged="Type_SelectionChanged"/>

                <Label Content="Статус:" Grid.Row="4" FontSize="15" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <ComboBox x:Name="Status" IsEnabled="False" Grid.Row="4" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}"/>
            </Grid>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button Click="Cancel" Content="Отмена" Style="{StaticResource CancelButtonStyle}" Margin="0,0,10,0"/>
            <Button Click="Save" Content="Сохранить" Style="{StaticResource EditButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
