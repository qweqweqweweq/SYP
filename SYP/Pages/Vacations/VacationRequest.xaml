<Page x:Class="SYP.Pages.Vacations.VacationRequest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.Vacations"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VacationRequest" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Border Background="#FF1F2F47" CornerRadius="0,0,10,10" Height="60" VerticalAlignment="Top" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label x:Name="lbTitle" Content="Подача заявки на отпуск" FontSize="22" FontFamily="/Fonts/#Montserrat Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <Border Background="White" CornerRadius="10" Margin="20,120,20,100" Padding="20" Effect="{DynamicResource ShadowEffect}">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Сотрудник:" FontSize="15" Grid.Row="0" Grid.Column="0" Foreground="#202a45"/>
                <Grid Grid.Row="0" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Content="Иванов Иван Иванович" x:Name="Employee" Height="30" FontSize="15"/>
                    <TextBlock x:Name="txtRemainingDays" Padding="5,0,5,0" FontSize="13" VerticalAlignment="Center" Grid.Row="1" Margin="0,0,0,10"/>
                </Grid>

                <Label Content="Дата начала отпуска:" FontSize="15" Grid.Row="1" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <DatePicker x:Name="dateStart" Grid.Row="1" Grid.Column="1" Height="30" FontSize="15" VerticalContentAlignment="Center" Style="{DynamicResource DatePickerStyle1}" SelectedDateChanged="Date_SelectedDateChanged"/>

                <Label Content="Дата окончания отпуска:" FontSize="15" Grid.Row="2" Grid.Column="0" Foreground="#202a45"/>
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DatePicker x:Name="dateEnd" Height="30" FontSize="15" VerticalContentAlignment="Center" Style="{DynamicResource DatePickerStyle1}" SelectedDateChanged="Date_SelectedDateChanged"/>
                    <TextBlock x:Name="txtVacationDaysCount" Padding="5,0,5,0" Visibility="Collapsed" FontSize="13" VerticalAlignment="Center"  Grid.Row="1"/>
                </Grid>

                <Label Content="Тип:" Grid.Row="3" FontSize="15" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <ComboBox x:Name="Type" Grid.Row="3" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}"/>
            </Grid>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button Click="Cancel" Content="Отмена" Style="{StaticResource CancelButtonStyle}" Margin="0,0,10,0"/>
            <Button x:Name="sendRequest" Click="SendRequest" Content="Отправить заявку" Style="{StaticResource EditButtonStyle}" Width="150"/>
        </StackPanel>
    </Grid>
</Page>
