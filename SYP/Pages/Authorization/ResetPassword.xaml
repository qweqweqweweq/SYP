<Page x:Class="SYP.Pages.Authorization.ResetPassword"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.Authorization"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ResetPassword" FontFamily="/Fonts/#Montserrat" Cursor="">

    <Grid Background="#FFDCE4F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" FontFamily="/Fonts/#Montserrat Bold">
            <StackPanel Orientation="Horizontal">
                <fa:ImageAwesome Icon="UserCircleOutline" Width="17" Height="17" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                <TextBlock Text="СотрудниК" Foreground="#202a45"/>
            </StackPanel>
        </Label>
        <Label VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,70,0,0">
            <TextBlock TextAlignment="Left" FontSize="21" Foreground="#FF333333" >
            Создаём рабочую среду,
            <LineBreak/>
            в которой хочется
            <LineBreak/>
            развиваться.
            </TextBlock>
        </Label>
        <Image Source="/Images/human-working.png" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="10,0,10,20"/>
        <Border Background="White" CornerRadius="10" Grid.Column="1" Margin="10" Effect="{DynamicResource ShadowEffect}">
            <Grid VerticalAlignment="Center">
                <Label Content="Восстановление пароля" Height="35" FontSize="23" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Fonts/#Montserrat Bold" Foreground="#202a45"/>
                <Label Content="Введите код из письма:" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,80,0,0"/>
                <TextBox x:Name="RecoveryCode" Height="30" FontSize="15" VerticalAlignment="Top" Margin="20,110,20,0" Style="{StaticResource RoundedTextBox2}"/>
                <Label Content="Новый пароль:" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,150,0,0"/>
                <PasswordBox x:Name="NewPassword" Height="30" FontSize="15" VerticalAlignment="Top" Margin="20,180,20,0" Style="{StaticResource RoundedPasswordBox}"/>
                <Button Click="Save" Content="Сохранить" Height="35" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,240,0,0" Width="150" Style="{StaticResource RoundedButton}"/>
                <Label Content="Назад" MouseDown="BackRecovery" Foreground="#FF728EBB" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,290,0,0" Style="{StaticResource HoverLabelStyleText}"/>
            </Grid>
        </Border>
    </Grid>
</Page>
