<Page x:Class="SYP.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages"
      xmlns:controls="clr-namespace:SYP.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Margin="10" CornerRadius="10" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label Height="40" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" FontFamily="/Fonts/#Montserrat Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="UserCircleOutline" Width="20" Height="20" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="СотрудниК" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label Style="{StaticResource LabelWithIconStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,90,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Home" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Главная" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenEmployees" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,125,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Users" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Сотрудники" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenDepartments" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,160,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Building" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отделы" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenPositions" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,195,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Briefcase" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Должности" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenVacations" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,230,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Calendar" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отпуска" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label x:Name="settings" MouseDown="OpenSettings" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,45">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Cog" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Настройки" Foreground="#202a45"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="Logout" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="SignOut" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Выход" Foreground="#202a45"/>
                    </StackPanel>
                </Label>
            </Grid>
        </Border>
        <controls:NotificationItem x:Name="notificationItem" Opacity="0" Visibility="Collapsed" Grid.ColumnSpan="2" VerticalAlignment="Bottom" Grid.RowSpan="2" HorizontalAlignment="Right" Panel.ZIndex="10" Margin="20"/>
        <ScrollViewer Margin="10" Grid.Column="1" VerticalScrollBarVisibility="Hidden">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="250"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" MinHeight="257"/>
                    <RowDefinition Height="Auto" MinHeight="153"/>
                </Grid.RowDefinitions>
                <Label x:Name="lbWelcome" Content="Добро пожаловать, Пользователь!" Height="40" FontSize="18" VerticalAlignment="Top" Foreground="#202a45" Margin="0,10,0,0" FontFamily="/Fonts/#Montserrat Bold"/>
                <Border CornerRadius="10" VerticalAlignment="Top" Background="White" Margin="0,60,10,0" Height="140" Effect="{DynamicResource ShadowEffect}">
                    <Grid>
                        <Label x:Name="CountEmployees" Content="Всего сотрудников: 105" Height="30" FontSize="15" VerticalAlignment="Top" Margin="10,10,10,0" Foreground="#202a45"/>
                        <Label x:Name="CountDepartments" Content="Всего отделов: 8" Height="30" FontSize="15" VerticalAlignment="Top" Margin="10,40,10,0" Foreground="#202a45"/>
                        <Label x:Name="CountFreePositions" Content="Свободные должности: 2" Height="30" FontSize="15" VerticalAlignment="Top" Margin="10,70,10,0" Foreground="#202a45"/>
                        <Label x:Name="CountVacation" Content="В отпуске сейчас: 12 сотрудников" Height="30" FontSize="15" VerticalAlignment="Top" Margin="10,100,10,10" Foreground="#202a45"/>
                    </Grid>
                </Border>
                <Viewbox Stretch="Uniform" VerticalAlignment="Center" Grid.Column="1" Effect="{DynamicResource ShadowEffect}" Margin="10">
                    <Calendar Style="{StaticResource RoundedCalendarStyle}"/>
                </Viewbox>

                <Border Grid.Column="1" Grid.Row="1" Background="White" CornerRadius="10" Padding="10" VerticalAlignment="Top" Margin="10,0,10,0" Effect="{DynamicResource ShadowEffect}">
                    <StackPanel Orientation="Horizontal" x:Name="WeatherPanel" VerticalAlignment="Center">
                        <StackPanel>
                            <TextBlock x:Name="WeatherTemp" FontWeight="Bold" FontSize="14" Foreground="#202a45" Margin="0,0,0,5"/>
                            <TextBlock x:Name="WeatherDesc" FontSize="12" Foreground="#606060"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <Border Background="White" CornerRadius="10" Grid.RowSpan="2" Margin="0,220,10,0" Padding="10" VerticalAlignment="Top" Effect="{DynamicResource ShadowEffect}">
                    <StackPanel>
                        <TextBlock Text="Ближайшие праздники" FontWeight="Bold" FontSize="16" Foreground="#202a45" Margin="0,0,0,5" Padding="5"/>
                        <ItemsControl x:Name="HolidayList" Padding="5">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <TextBlock Text="{Binding Name}" FontSize="14" Foreground="#606060"/>
                                        <TextBlock Text=" — " FontSize="14" Foreground="#606060"/>
                                        <TextBlock Text="{Binding FormattedDate}" FontSize="14" Foreground="#606060"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                    </StackPanel>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
