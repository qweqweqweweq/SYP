<UserControl x:Class="SYP.Pages.NotificationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYP.Pages"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" FontFamily="/Fonts/#Montserrat" MinWidth="200">
    <Border x:Name="RootBorder" Background="White" CornerRadius="10" Padding="10" BorderBrush="#FF728EBB" BorderThickness="1">
        <StackPanel>
            <Grid Height="30" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Label Content="Уведомления" FontSize="15" VerticalAlignment="Center" Foreground="#202a45" FontWeight="Bold" Grid.Column="0"/>

                <fa:ImageAwesome Icon="Close" Cursor="Hand" MouseDown="CloseNotification" Width="12" Height="12" Margin="0,0,0,0" Foreground="#FF728EBB" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            </Grid>

            <Label x:Name="happyBirthday" Visibility="Collapsed" Height="Auto" MaxWidth="300" HorizontalAlignment="Left" Foreground="Black" FontSize="14">
                <Label.Content>
                    <TextBlock Text="• С днём рождения!!!" TextWrapping="Wrap"/>
                </Label.Content>
            </Label>
            <Label x:Name="vacationRequests" Content="• У вас 1 новая заявка на отпуск" Height="30" FontSize="14" Visibility="Collapsed"/>
            <Label x:Name="dayOfVacation" Content="• Ваш отпуск начнется через .. дней" Height="30" FontSize="14" Visibility="Collapsed"/>
        </StackPanel>
    </Border>
</UserControl>
