<Page x:Class="SYP.Pages.EditPages.PositionEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.EditPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PositionEdit" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Border Background="White" CornerRadius="0,0,10,10" Height="60" VerticalAlignment="Top" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label x:Name="lbTitle" Content="Добавление новой должности" FontSize="22" FontFamily="/Fonts/#Montserrat Bold" Foreground="#202a45" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>
        <Border Background="White" CornerRadius="10" Margin="20,120,20,100" Padding="10" Effect="{DynamicResource ShadowEffect}">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Наименование должности:" FontSize="15" Grid.Row="0" Grid.Column="0" Foreground="#202a45"/>
                <TextBox x:Name="NamePosition" FontSize="15" Height="30" Grid.Row="0" Grid.Column="1" Style="{StaticResource RoundedTextBoxEdit}" Foreground="#202a45" VerticalContentAlignment="Center"/>

                <Label Content="Зарплата:" FontSize="15" Grid.Row="1" Grid.Column="0" Margin="0,6" Foreground="#202a45"/>
                <TextBox x:Name="Salary" Height="30" FontSize="15" Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedTextBoxEdit}" Foreground="#202a45" VerticalContentAlignment="Center"/>
            </Grid>
        </Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button Content="Отмена" Style="{StaticResource CancelButtonStyle}" Margin="0,0,10,0"/>
            <Button x:Name="btnText" Content="Сохранить" Style="{StaticResource EditButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
