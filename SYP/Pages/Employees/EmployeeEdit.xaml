<Page x:Class="SYP.Pages.Employees.EmployeeEdit"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages.Employees"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="Employees" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Border Background="#FF1F2F47" CornerRadius="0,0,10,10" Height="60" VerticalAlignment="Top"
                Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label x:Name="lbTitle" Content="Создание нового сотрудника" FontSize="22" FontFamily="/Fonts/#Montserrat Bold" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </Grid>
        </Border>

        <Border Background="White" CornerRadius="10" Margin="20,70,20,60" Padding="20"
                Effect="{DynamicResource ShadowEffect}">
            <Grid VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="ФИО:" FontSize="15" Grid.Row="0" Grid.Column="0" Margin="0,5" Foreground="#202a45"/>
                <TextBox x:Name="FIO" Grid.Row="0" Grid.Column="1" Height="30" FontSize="15" Style="{StaticResource RoundedTextBoxEdit}"/>

                <Label Content="Дата рождения:" FontSize="15" Grid.Row="3" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <DatePicker x:Name="dateBirth" Grid.Row="3" Grid.Column="1" Height="30" FontSize="15" VerticalContentAlignment="Center" Style="{DynamicResource DatePickerStyle1}" />

                <Label Content="Должность:" FontSize="15" Grid.Row="4" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <ComboBox x:Name="position" Grid.Row="4" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}"/>

                <Label Content="Отдел:" FontSize="15" Grid.Row="5" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <ComboBox x:Name="department" Grid.Row="5" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}"/>

                <Label Content="Дата поступления:" FontSize="15" Grid.Row="6" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <DatePicker x:Name="dateHire" Grid.Row="6" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource DatePickerStyle1}" />

                <Label Content="Email:" FontSize="15" Grid.Row="7" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <TextBox x:Name="email" Grid.Row="7" Grid.Column="1" Height="30" FontSize="15" Style="{StaticResource RoundedTextBoxEdit}"/>

                <Label Content="Номер телефона:" FontSize="15" Grid.Row="8" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <TextBox x:Name="phoneNumber" Grid.Row="8" Grid.Column="1" Height="30" FontSize="15" Style="{StaticResource RoundedTextBoxEdit}"/>

                <Label Content="Статус:" FontSize="15" Grid.Row="9" Grid.Column="0" Margin="0,8" Foreground="#202a45"/>
                <ComboBox x:Name="status" Grid.Row="9" Grid.Column="1" Height="30" FontSize="15" Style="{DynamicResource ComboBoxStyleEdited}"/>
            </Grid>
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20">
            <Button Click="Cancel" Content="Отмена" Style="{StaticResource CancelButtonStyle}" Margin="0,0,10,0" />
            <Button Click="Save" Content="Сохранить" Style="{StaticResource EditButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
