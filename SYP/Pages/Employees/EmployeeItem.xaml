<UserControl x:Class="SYP.Pages.Employees.EmployeeItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYP.Pages.Employees"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             mc:Ignorable="d" FontFamily="/Fonts/#Montserrat">
    <Border CornerRadius="10" Background="White" Margin="10,10,10,5" Effect="{DynamicResource ShadowEffect}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="10">
                <Label x:Name="lbFIO" Content="ФИО: Иванов Иван Иванович" Height="35" FontSize="15" FontFamily="/Fonts/#Montserrat Medium" Style="{StaticResource LabelStyle2}" HorizontalAlignment="Left"/>
                <Label x:Name="lbPosition" Content="Должность: Бухгалтер" Height="30" FontSize="14"/>
                <Label x:Name="lbDepartment" Content="Отдел: Финансы" Height="30" FontSize="14"/>
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="lbStatus" Content="Статус: Работает" Height="30" FontSize="14" FontFamily="/Fonts/#Montserrat Medium"/>
                    <Ellipse x:Name="statusCircle" Width="10" Height="10" Margin="5,0,0,0" VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Center">
                <Label x:Name="View" MouseDown="ViewClick" Height="30" Width="30" Style="{StaticResource HoverLabelStyle}">
                    <fa:ImageAwesome Icon="AddressCard" Width="20" Height="20" Foreground="#FF728EBB"/>
                </Label>
                <Label x:Name="Edit" MouseDown="EditClick" Height="30" Width="30" Margin="10,0,0,0" Visibility="Collapsed" Style="{StaticResource HoverLabelStyle}" Cursor="Hand">
                    <fa:ImageAwesome Icon="Pencil" Width="20" Height="20" Foreground="#FF728EBB"/>
                </Label>
                <Label x:Name="Delete" MouseDown="DeleteClick" Height="30" Width="30" Margin="5,0,0,0" Visibility="Collapsed" Style="{StaticResource HoverLabelStyle}">
                    <fa:ImageAwesome Icon="Trash" Width="20" Height="20" Foreground="#FF728EBB"/>
                </Label>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
