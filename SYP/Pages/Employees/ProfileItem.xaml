<UserControl x:Class="SYP.Pages.Employees.ProfileItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SYP.Pages.Employees"
             mc:Ignorable="d" FontFamily="/Fonts/#Montserrat">
    
    <Border Background="White" CornerRadius="10" Effect="{DynamicResource ShadowEffect}" Height="350" Width="700">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="lbTitle" Content="Профиль пользователя Иван" Grid.ColumnSpan="2" Height="40" FontSize="22" VerticalAlignment="Top" HorizontalAlignment="Center" FontFamily="/Fonts/#Montserrat SemiBold" Margin="0,20,0,0"/>
            <Label x:Name="fio" Content="ФИО:" Height="30" FontSize="15" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="20,80,20,0"/>
            <Label x:Name="dateBirth" Content="Дата рождения:" Height="30" FontSize="15" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="20,110,20,0"/>
            <StackPanel Margin="20,160,10,20">
                <Label x:Name="department" Content="Отдел:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="email" Content="Эл. почта:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="dateHire" Content="Дата поступления:" Height="30" FontSize="15" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Margin="10,160,20,20">
                <Label x:Name="position" Content="Должность:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="phone" Content="Номер телефона:" Height="30" FontSize="15" VerticalAlignment="Top"/>
                <Label x:Name="status" Content="Статус:" Height="30" FontSize="15" VerticalAlignment="Top"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Grid.ColumnSpan="2" Margin="20">
                <Button x:Name="newUser" Visibility="Collapsed" Content="Получить логин и пароль" Click="NewUserButton" Height="30" FontSize="15" Width="230" Margin="0,0,10,0" Style="{StaticResource CancelButtonStyle}"/>
                <Button Content="Закрыть" Click="Close" Height="30" FontSize="15" Width="100" Style="{StaticResource CancelButtonStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
