<Page x:Class="SYP.Pages.Settings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SYP.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="1000"
      Title="Settings" FontFamily="/Fonts/#Montserrat">

    <Grid Background="#FFDCE4F1">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Background="White" Margin="10" CornerRadius="10" Effect="{DynamicResource ShadowEffect}">
            <Grid>
                <Label Height="40" FontSize="20" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15,10,0,0" FontFamily="/Fonts/#Montserrat Bold">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="UserCircleOutline" Width="20" Height="20" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="СотрудниК" Foreground="#FF1F2F47"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenMain" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,90,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Home" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Главная"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenEmployees" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,125,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Users" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Сотрудники"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenDepartments" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,160,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Building" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отделы"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenPositions" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,195,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Briefcase" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Должности"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="OpenVacations" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,230,0,0">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Calendar" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Отпуска"/>
                    </StackPanel>
                </Label>

                <Label Style="{StaticResource LabelWithIconStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,45">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="Cog" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Настройки"/>
                    </StackPanel>
                </Label>

                <Label MouseDown="Logout" Style="{StaticResource HoverLabelStyle}" Height="30" FontSize="15" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="20,0,0,10" Cursor="Hand">
                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome Icon="SignOut" Width="16" Height="16" Margin="0,0,5,0" Foreground="#FF728EBB"/>
                        <TextBlock Text="Выход"/>
                    </StackPanel>
                </Label>
            </Grid>
        </Border>
        <Border Margin="10" CornerRadius="10" Grid.Column="1">
            <Border BorderThickness="2" CornerRadius="10" Background="White" Effect="{DynamicResource ShadowEffect}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="Настройки пользователя" Height="30" FontSize="18" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="10" FontFamily="/Fonts/#Montserrat SemiBold" Foreground="#FF1F2F47" Grid.ColumnSpan="2"/>
                    <Label x:Name="lbFIO" Content="Иванов Иван Иванович" Height="30" FontSize="16" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,80,20,0"/>
                    <Label x:Name="lbDateBirth" Content="Дата рождения: 03.03.1988" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,120,20,0"/>
                    <Label x:Name="lbDepartment" Content="Отдел: HR" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,150,20,0"/>
                    <Label x:Name="lbPosition" Content="Должность: Менеджер" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,180,20,0"/>
                    <Label x:Name="lbDateHire" Content="Дата поступления: 20.11.2016" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,210,20,0"/>
                    <Label x:Name="lbPhone" Content="Номер телефона: +79220110212" Height="30" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,240,20,0"/>
                    <GroupBox Header="Личные данные" Margin="10,80,10,20" FontSize="16" VerticalAlignment="Top" Background="White" Foreground="#FF1F2F47" BorderBrush="#FF728EBB" Grid.Column="1" Effect="{DynamicResource ShadowEffect}">
                        <StackPanel Margin="10">
                            <Label Content="Имя пользователя:" FontSize="14" Margin="0,5,0,0"/>
                            <TextBox x:Name="UserNameTextBox" Height="30" FontSize="14" Style="{StaticResource RoundedTextBoxEdit}"/>

                            <Label Content="Email:" FontSize="14" Margin="0,10,0,0"/>
                            <TextBox x:Name="EmailTextBox" Height="30" FontSize="14" Style="{StaticResource RoundedTextBoxEdit}"/>

                            <Button Content="Сохранить изменения" Width="180" Height="30" FontSize="14" Margin="0,15,0,0" Style="{StaticResource EditButtonStyle}" Click="SavePersonalInfo_Click"/>
                        </StackPanel>
                    </GroupBox>
                    <GroupBox Header="Смена пароля" Margin="10,310,10,0" FontSize="16" VerticalAlignment="Top" Foreground="#FF1F2F47" Background="White" BorderBrush="#FF728EBB" Grid.Column="1" Effect="{DynamicResource ShadowEffect}">
                        <StackPanel Margin="10">
                            <Label Content="Старый пароль:" FontSize="14" Margin="0,5,0,0"/>
                            <PasswordBox x:Name="OldPasswordBox" Height="30" FontSize="14" Style="{StaticResource RoundedPasswordBoxEdited}"/>

                            <Label Content="Новый пароль:" FontSize="14" Margin="0,10,0,0"/>
                            <PasswordBox x:Name="NewPasswordBox" Height="30" FontSize="14" Style="{StaticResource RoundedPasswordBoxEdited}"/>

                            <Label Content="Подтвердите новый пароль:" FontSize="14" Margin="0,10,0,0"/>
                            <PasswordBox x:Name="ConfirmPasswordBox" Height="30" FontSize="14" Style="{StaticResource RoundedPasswordBoxEdited}"/>

                            <Button Content="Изменить пароль" Width="140" Height="30" FontSize="14" Margin="0,20,0,0" Style="{StaticResource EditButtonStyle}" Click="ChangePassword_Click"/>
                        </StackPanel>
                    </GroupBox>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>
